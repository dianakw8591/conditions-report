<h1>Edit Your Information</h1>
<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :location %>
    <%= f.collection_select :location_id, Location.all, :id, :name %><br>
    <%= f.submit "Update Account" %>
<% end %>

<% if flash.now[:notice] %>
  <% flash.now[:notice].each do |msg|%>
    <%= msg %><br>
    <% end %>
<% end %>
